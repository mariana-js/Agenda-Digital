CREATE TABLE RAMAL (
	ID_RAMAL INTEGER NOT NULL UNIQUE CONSTRAINT PK_ID_RAMAL PRIMARY KEY,
	NUMERO_RAMAL VARCHAR(10)
);

CREATE TABLE SETOR (
	ID_SETOR INTEGER NOT NULL UNIQUE CONSTRAINT PK_ID_SETOR PRIMARY KEY,
	ID_RAMAL INTEGER NOT NULL REFERENCES RAMAL(ID_RAMAL),
	NOME_SETOR VARCHAR(20)
);

CREATE TABLE PESSOA (
	ID_PESSOA INTEGER NOT NULL UNIQUE CONSTRAINT PK_ID_PESSOA PRIMARY KEY,
	NOME_PESSOA VARCHAR(50),
	EMAIL VARCHAR(50) UNIQUE,
	CELULAR_CORPORATIVO VARCHAR(20),
	CELULAR_PESSOAL VARCHAR(20) UNIQUE,
	FLAG_PRIVADO BOOLEAN ,
	FLAG_FUNCIONARIO BOOLEAN,
	CEP INTEGER,
	ESTADO VARCHAR(20),
	CIDADE VARCHAR(20),
	RUA VARCHAR(40),
	NUMERO_CASA INTEGER
);

CREATE TABLE FUNCIONARIO (
	ID_FUNCIONARIO INTEGER NOT NULL UNIQUE CONSTRAINT PK_ID_FUNCIONARIO PRIMARY KEY,
	ID_SETOR INTEGER NOT NULL REFERENCES SETOR(ID_SETOR),
	ID_RAMAL INTEGER NOT NULL REFERENCES RAMAL(ID_RAMAL),
	RAMAL_FUNCIONARIO VARCHAR(16),
	SETOR_ALOCADO VARCHAR(20)
	DATA_NACIMENTO VARCHAR(10),
	FLAG_ADMINISTRADOR BOOLEAN,
	IMAGEM OID
) INHERITS(PESSOA);

